<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo" 
			   xmlns:JBS="org.understandinguncertainty.JBS.*" 
			   xmlns:view="org.understandinguncertainty.JBS.view.*">

<!--	minWidth="700" minHeight="450"
-->
	<fx:Style>
		
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/halo";
		@namespace ns "library://ns.adobe.com/flex/mx";
		
		.errorTip { 
			color: #FFFFFF;
			fontSize: 16; 
			fontWeight: "bold"; 
			shadowColor: #000000; 
			borderColor: #CE2929; 
			borderStyle: "errorTipRight"; 
			paddingBottom: 4; 
			paddingLeft: 4; 
			paddingRight: 4; 
			paddingTop: 4; 
		}
		
		ns|AreaChart {
			horizontalAxisStyleName:myAxisStyles;
			verticalAxisStyleName:myAxisStyles;
		}
		
		ns|LineChart {
			horizontalAxisStyleName:myAxisStyles;
			verticalAxisStyleName:myAxisStyles;
		}
		
		ns|ColumnChart {
			horizontalAxisStyleName:myAxisStyles;
			verticalAxisStyleName:myAxisStyles;			
		}
		
		ns|BarChart {
			horizontalAxisStyleName:myAxisStyles;
			verticalAxisStyleName:myAxisStyles;			
		}
		
		.myAxisStyles {
			tickPlacement:none;
			/*fontSize:20;*/
		}
		
		.thermometerStyle {
			tickPlacement:none;
			fontSize:20;
		}
		
		.deanfield {
			fontWeight: normal;
			fontSize: 10;
			color:#000000;
			/* labelPlacement: left; */
		}

	</fx:Style>
		
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<JBS:JBSContext id="context" contextView="{this}" />
	</fx:Declarations>
	
	<view:Main width="100%" height="100%" />
	
</s:Application>
