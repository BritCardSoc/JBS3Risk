								<s:Label text="I have read the" fontWeight="normal"/>
								<s:Button id="termsButton" label="terms and conditions"/>
								<components:HadCVDCheck id="termsCheckbox" errorSkin="{ErrorSkin}"/>
							</s:HGroup>
										
						</s:VGroup>
					</s:Group>
				</s:VGroup>
				
